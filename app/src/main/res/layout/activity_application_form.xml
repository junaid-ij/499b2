<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.junaid.apitestcopy.activity.ApplicationForm">

        <TextView
            android:id="@+id/af_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="96dp"
            android:padding="10dp"
            android:text="@string/af_heading" />

        <TextView
            android:id="@+id/af"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:background="@color/hos_name"
            android:padding="5dp"
            android:text="@string/af"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/af_msg"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/af"
            android:layout_toStartOf="@+id/af"
            android:text="Patient's Name" />

        <EditText
            android:id="@+id/p_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p_name"
            android:layout_alignStart="@+id/p_name"
            android:layout_below="@+id/p_name"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/p_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p_name_input"
            android:layout_alignStart="@+id/p_name_input"
            android:layout_below="@+id/p_name_input"
            android:layout_marginTop="20dp"
            android:text="Age" />

        <EditText
            android:id="@+id/p_age_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p_age"
            android:layout_alignStart="@+id/p_age"
            android:layout_below="@+id/p_age"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/p_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_age_input"
            android:layout_alignStart="@id/p_age_input"
            android:layout_below="@id/p_age_input"
            android:layout_marginTop="20dp"
            android:text="Gender(M/F)" />

        <EditText
            android:id="@+id/p_gender_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_gender"
            android:layout_alignStart="@id/p_gender"
            android:layout_below="@id/p_gender"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_gender_input"
            android:layout_alignStart="@id/p_gender_input"
            android:layout_below="@id/p_gender_input"
            android:layout_marginTop="20dp"
            android:text="Blood Group" />

        <EditText
            android:id="@+id/p_bg_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_bg"
            android:layout_alignStart="@id/p_bg"
            android:layout_below="@id/p_bg"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_bg_input"
            android:layout_alignStart="@id/p_bg_input"
            android:layout_below="@id/p_bg_input"
            android:layout_marginTop="20dp"
            android:text="Address" />

        <EditText
            android:id="@+id/p_address_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_address"
            android:layout_alignStart="@id/p_address"
            android:layout_below="@id/p_address"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_phn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_address_input"
            android:layout_alignStart="@id/p_address_input"
            android:layout_below="@id/p_address_input"
            android:layout_marginTop="20dp"
            android:text="Contact Number" />

        <EditText
            android:id="@+id/p_phn_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_phn"
            android:layout_alignStart="@id/p_phn"
            android:layout_below="@id/p_phn"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_ephn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_phn_input"
            android:layout_alignStart="@id/p_phn_input"
            android:layout_below="@id/p_phn_input"
            android:layout_marginTop="20dp"
            android:text="Emergency Contact" />

        <EditText
            android:id="@+id/p_ephn_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_ephn"
            android:layout_alignStart="@id/p_ephn"
            android:layout_below="@id/p_ephn"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_ephn_input"
            android:layout_alignStart="@id/p_ephn_input"
            android:layout_below="@id/p_ephn_input"
            android:layout_marginTop="20dp"
            android:text="Occupation" />

        <EditText
            android:id="@+id/p_occupation_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_occupation"
            android:layout_alignStart="@id/p_occupation"
            android:layout_below="@id/p_occupation"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_occupation_input"
            android:layout_alignStart="@id/p_occupation_input"
            android:layout_below="@id/p_occupation_input"
            android:layout_marginTop="20dp"
            android:text="Email" />

        <EditText
            android:id="@+id/p_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_email"
            android:layout_alignStart="@id/p_email"
            android:layout_below="@id/p_email"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_refby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_email_input"
            android:layout_alignStart="@id/p_email_input"
            android:layout_below="@id/p_email_input"
            android:layout_marginTop="20dp"
            android:text="Reffered By (Name of the Doctor)" />

        <EditText
            android:id="@+id/p_refby_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_refby"
            android:layout_alignStart="@id/p_refby"
            android:layout_below="@id/p_refby"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_refby_input"
            android:layout_alignStart="@id/p_refby_input"
            android:layout_below="@id/p_refby_input"
            android:layout_marginTop="20dp"
            android:text="Disease" />

        <EditText
            android:id="@+id/p_disease_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_disease"
            android:layout_alignStart="@id/p_disease"
            android:layout_below="@id/p_disease"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_disduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_disease_input"
            android:layout_alignStart="@id/p_disease_input"
            android:layout_below="@id/p_disease_input"
            android:layout_marginTop="20dp"
            android:text="Duration of Disease" />

        <EditText
            android:id="@+id/p_disduration_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_disduration"
            android:layout_alignStart="@id/p_disduration"
            android:layout_below="@id/p_disduration"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <TextView
            android:id="@+id/p_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_disduration_input"
            android:layout_alignStart="@id/p_disduration_input"
            android:layout_below="@id/p_disduration_input"
            android:layout_marginTop="20dp"
            android:text="Reason for emergency admission" />

        <EditText
            android:id="@+id/p_reason_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_reason"
            android:layout_alignStart="@id/p_reason"
            android:layout_below="@id/p_reason"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="" />

        <Button
            android:id="@+id/form_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p_reason_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Submit" />


    </RelativeLayout>

</ScrollView>